<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="//fonts.googleapis.com/css?family=Righteous" rel="stylesheet" />
  <link href="//fonts.googleapis.com/css?family=Open+Sans+Condensed:300,300i,700" rel="stylesheet" />
  <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i" rel="stylesheet" />
  <link rel="stylesheet" href="/css/all.min.css" />
  <link rel="stylesheet" href="/css/style.css" />
  <link id="favicon" rel="icon" type="image/png" href="/images/store_icon.ico">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="../dist/main.css" />
</head>
<body class="bg-gray-50">
  <!-- #region Header -->
  <%- include('layouts/header') %>
  <input type="hidden" id="user-id" value="<%= user ? user.id : '' %>">
  <!-- Container -->
  <div class="max-w-screen-lg mx-auto px-4 sm:px-6 lg:px-8 mb-12 md:mt-12 flex flex-col md:gap-10">
    <!-- Breadcrumb -->
    <div class="text-gray-500 text-sm mb-8">
      <a href="/">Account</a> / 
      <a href="#">My Account</a> / 
      <a href="#">Product</a> / 
      <a href="#">View Cart</a> / 
      <span class="font-semibold">Checkout</span>
    </div>

    <!-- Main Form and Summary -->
    <form class="flex flex-col lg:flex-row gap-6 lg:gap-10">
      <!-- Billing Details -->
      <div class="flex-grow">
        <h2 class="text-xl md:text-2xl font-medium mb-4 md:mb-6">Billing Details</h2>
        <div class="flex flex-col gap-4">
          <div>
            <label for="firstName" class="block text-sm text-gray-600">First Name*</label>
            <input type="text" id="firstName" name="firstName" class="w-full rounded-md border-gray-300 focus:ring focus:ring-gray-200 text-gray-600 px-4 py-2">
          </div>
          <div>
            <label for="lastName" class="block text-sm text-gray-600">Last Name</label>
            <input type="text" id="lastName" name="lastName" class="w-full rounded-md border-gray-300 focus:ring focus:ring-gray-200 text-gray-600 px-4 py-2">
          </div>
          <div>
            <label for="streetAddress" class="block text-sm text-gray-600">Street Address*</label>
            <input type="text" id="streetAddress" name="streetAddress" class="w-full rounded-md border-gray-300 focus:ring focus:ring-gray-200 text-gray-600 px-4 py-2">
          </div>
          <div>
            <label for="apartment" class="block text-sm text-gray-600">Apartment, floor, etc. (optional)</label>
            <input type="text" id="apartment" name="apartment" class="w-full rounded-md border-gray-300 focus:ring focus:ring-gray-200 text-gray-600 px-4 py-2">
          </div>
          <div>
            <label for="city" class="block text-sm text-gray-600">Town/City*</label>
            <input type="text" id="city" name="city" class="w-full rounded-md border-gray-300 focus:ring focus:ring-gray-200 text-gray-600 px-4 py-2">
          </div>
          <div>
            <label for="phone" class="block text-sm text-gray-600">Phone Number*</label>
            <input type="text" id="phone" name="phone" class="w-full rounded-md border-gray-300 focus:ring focus:ring-gray-200 text-gray-600 px-4 py-2">
          </div>
          <div>
            <label for="email" class="block text-sm text-gray-600">Email Address*</label>
            <input type="email" id="email" name="email" class="w-full rounded-md border-gray-300 focus:ring focus:ring-gray-200 text-gray-600 px-4 py-2">
          </div>
          <div class="flex items-center gap-2">
            <input type="checkbox" id="saveInfo" name="saveInfo" class="text-red-500 focus:ring focus:ring-gray-200">
            <label for="saveInfo" class="text-sm text-gray-600">Save this information for faster check-out next time</label>
          </div>
        </div>
      </div>

      <!-- Cart Summary -->
      <div class="w-full lg:w-1/2 bg-white p-6 shadow rounded-md max-w-md">
        <h2 class="text-lg md:text-xl font-medium mb-4 md:mb-6">Your Order</h2>
        <div class="flex flex-col gap-4">
          <div class="flex justify-between">
            <span>LCD Monitor</span>
            <span>$650</span>
          </div>
          <div class="flex justify-between">
            <span>HI Gamepad</span>
            <span>$1100</span>
          </div>
          <div class="flex justify-between border-t pt-4">
            <span>Subtotal:</span>
            <span>$1750</span>
          </div>
          <div class="flex justify-between">
            <span>Shipping:</span>
            <span>Free</span>
          </div>
          <div class="flex justify-between font-semibold text-lg border-t pt-4">
            <span>Total:</span>
            <span>$1750</span>
          </div>
          <div class="mt-4">
            <label class="flex items-center gap-2">
              <input type="radio" name="paymentMethod" value="bank" class="text-red-500 focus:ring focus:ring-gray-200">
              <span>Bank</span>
            </label>
            <label class="flex items-center gap-2 mt-2">
              <input type="radio" name="paymentMethod" value="cash" class="text-red-500 focus:ring focus:ring-gray-200">
              <span>Cash on delivery</span>
            </label>
          </div>
          <button type="submit" class="bg-red-500 text-white rounded-md px-6 py-2 mt-4 w-full">Place Order</button>
        </div>
      </div>
    </form>
  </div>
  <!-- #region Footer-->
  <%- include('layouts/footer') %>
  <!-- #endregion Footer -->
  <script src="https://cdn.tailwindcss.com"></script>
</body>
</html>