<div class="bg-slate-900 py-2 px-4 hidden md:block">
    <div id="search-form" class="relative max-w-lg mx-auto col-span-4 flex items-center">
        <!-- Icon tìm kiếm bên trái -->
        <span class="absolute inset-y-0 left-0 pl-3 flex items-center z-10">
            <i class="gg-search"></i>
        </span>
        <!-- Input tìm kiếm -->
        <input id="search-input"
            class="bg-gray-100 h-8 rounded-l-xl pl-10 block w-full border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
            type="text" name="search" placeholder="Search for a product..." required />
        <!-- Nút tìm kiếm -->
        <button type="button"
        src = "/search/results"
        onclick="updateQueryAndSearchProductListWithAJAX()"
            class="bg-blue-900 h-8 px-4 text-white font-semibold rounded-r-xl hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300">
            Search
        </button>
    </div>
</div>
